{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    // "noEmit": false,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
	  "./src/**/*.tsx",
  ],
  "exclude": [
    ".husky/**/*"
  ],
}
